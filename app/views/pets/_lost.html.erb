<fieldset>
	<legend>General Information</legend>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :breed %>
		<select class="form-control" id="pet_breed" name="pet[breed]" placeholder="Select a breed ...">
			<option value="">Unknown</option>
			<option value="Boxer">Boxer</option>
			<option value="Rottweiler">Rottweiler</option>
		</select>
	</div>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, class: "form-control" %>
	</div>
</fieldset>

<fieldset>
	<legend>Contact Information</legend>

	<div class="form-group">
		<%= f.label :email, "Email Address" %>
		<%= f.text_field :email, placeholder: "you@gmail.com", class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :phone, "Phone Number" %>
		<%= f.text_field :phone, placeholder: "(281) 555 - 1234", class: "form-control" %>
	</div>
</fieldset>

<fieldset>
	<legend>Location</legend>

	<div class="form-group">
		<%= f.label :area_code, "Area Code" %>
		<%= f.text_field :area_code, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :city %>
		<%= f.text_field :city, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :state %>
		<%= f.text_field :state, class: "form-control" %>
	</div>
</fieldset>

